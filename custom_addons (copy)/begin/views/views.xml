<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="begin.list">
      <field name="name">begin list</field>
      <field name="model">begin.begin</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="begin.action_window">
      <field name="name">begin window</field>
      <field name="res_model">begin.begin</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="begin.action_server">
      <field name="name">begin server</field>
      <field name="model_id" ref="model_begin_begin"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="begin" id="begin.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="begin.menu_1" parent="begin.menu_root"/>
    <menuitem name="Menu 2" id="begin.menu_2" parent="begin.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="begin.menu_1_list" parent="begin.menu_1"
              action="begin.action_window"/>
    <menuitem name="Server to list" id="begin" parent="begin.menu_2"
              action="begin.action_server"/>

  </data>
</odoo>