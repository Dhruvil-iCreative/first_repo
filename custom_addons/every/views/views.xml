<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="every_tree">
            <field name="name">Every Tree View</field>
            <field name="model">every.every</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fname"/>
                    <field name="lname"/>
                    <field name="gender" />
                    <field name="city"/>
                    <field name="t_doc"/>
                    <field name="t_doc_number" widget="phone"/>
                    <field name="t_doc_exp"/>
                    <field name="t_doc_qua"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="every_form">
            <field name="name">Every Form View</field>
            <field name="model">every.every</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <div class="oe_button_box" name="button_box">
                            <button name="hospital_open"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-history"
                                    string="Hospital">
                                <div class="o_stat_info">
                                    <field name="patient_count" class="o_stat_value"/>
                                    <span class ="o_stat_text">patients</span>
                                </div>
                            </button>
                        </div>
                    </group>
                    <header>
                        <button name="action_process" id="process_activated" string="Process" type="object" states="start,confirm"/>
                        <button name="action_confirm" id="process_confirm" string="Confirm" type="object" class="btn-primary" states="in_process,cancel"/>
                        <button name="action_cancel" id="process_cancelled" string="Cancel" type="object" states="start,in_process"/>
                        <field name="state" widget="statusbar" statusbar_visible="every_form,hospital_form,all_done,cancel"/>
                    </header>
                    <group>
                        <field name="fname" required="True"/>
                        <field name="lname" required="True"/>
                        <field name="gender" widget="radio" options="{'horizontal': true}"/>
                        <field name="city"/>
                    </group>
                    <group>
                        <field name="mobile" widget="phone" required="True"/>
                        <field name="email" widget="email"/>

                    </group>
                    <group>
                        <field name="visit_fee"/>
                        <field name="medication_fee"/>
                        <field name="total_fee"/>
                    </group>
                    <group>
                        <field name="t_doc"/>
                        <field name="t_doc_number" widget="phone"/>
                        <field name="t_doc_exp"/>
                        <field name="t_doc_qua"/>
                    </group>
                    <group>
                        <button name="wiz_open" string="Discount with wizard" type="object"/>
                    </group>
                    <group>
                        <button name="wiz_open2" string="Penalty with wizard" type="object"/>
                    </group>
                    <group>
                        <button type="action" string="Open Hospital View" name="%(hospital.hospital_action_window)d" class="btn-sm btn-link mb4 fa fa-globe"/>
                    </group>

                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="every.action_window">
            <field name="name">every window</field>
            <field name="res_model">every.every</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->

        <record model="ir.actions.server" id="every.action_server">
            <field name="name">every server</field>
            <field name="model_id" ref="model_every_every"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>


    </data>
</odoo>