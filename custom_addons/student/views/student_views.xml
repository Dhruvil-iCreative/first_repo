              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="student" id="student.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Students" id="student.menu_1" parent="student.menu_root" action="student_action"/>
