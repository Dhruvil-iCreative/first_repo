<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="student_tree">
            <field name="name">student list</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fname"/>
                    <field name="lname"/>
                    <field name="mobile" widget="phone"/>
                    <field name="email" widget="email"/>
                    <field name="gender"/>
                    <field name="city"/>
                    <field name="school_id_1"/>
                    <field name="departmentss" widget="many2many_tags"/>
                    <field name="coursess" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="student_form">
            <field name="name">student form</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="fname"/>
                        <field name="lname"/>
                        <field name="mobile" widget="phone"/>
                        <field name="email" widget="email"/>
                        <field name="gender" widget="radio"/>
                        <field name="city"/>
                        <field name="school_id_1"/>
                        <field name="departmentss" widget="many2many"/>
                        <field name="coursess" widget="many2many_tags"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="student_action">
            <field name="name">student window</field>
            <field name="res_model">student.student</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
