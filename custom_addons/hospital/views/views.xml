<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="hospital_list">
      <field name="name">hospital list</field>
      <field name="model">hospital.hospital</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fname"/>
          <field name="lname"/>
          <field name="mobile" widget="phone"/>
          <field name="email" widget="email"/>
          <field name="gender" />
          <field name="city" widget="selection"/>
          <field name="disease"/>
          <field name="visit_fee"/>
          <field name="medication_fee"/>
          <field name="total_fee"/>
          <field name="image" widget="image"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_form">
      <field name="name">hospital form</field>
      <field name="model">hospital.hospital</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="fname"/>
                <field name="lname"/>
                <field name="image" widget="image"/>
              </group>
              <group>
                <field name="mobile" widget="phone"/>
                <field name="email" widget="email"/>
                <field name="gender" widget="radio"/>
                <field name="city" widget="selection"/>
              </group>
            </group>
          </sheet>
          <sheet>
            <group>
              <field name="disease" widget="selection"/>
              <field name="visit_fee"/>
              <field name="medication_fee"/>
              <field name="total_fee"/>
            </group>
            <notebook>
              <page string="Treatement">
                      <group>
                        <field name="treatement_mode" widget="selection"/>
                        <field name="treatement_cost"/>
                        <field name="treatement_date"/>
                        <field name="treatement_disc" widget="url"/>
                      </group>
              </page>
              <page string="Recommendation">
                      <group>
                        <field name="rec_opt" widget="radio" options="{'horizontal':true}"/>
                        <field name="rec_hos"/>
                        <field name="rec_doc"/>
                      </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hospital.action_window">
      <field name="name">Patient window</field>
      <field name="res_model">hospital.hospital</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hospital.action_server">
      <field name="name">hospital server</field>
      <field name="model_id" ref="model_hospital_hospital"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="hospital" id="hospital_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="hospital_menu_1" parent="hospital_menu_root"/>
    <menuitem name="Menu 2" id="hospital_menu_2" parent="hospital_menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="hospital_menu_1_list" parent="hospital_menu_1"
              action="hospital.action_window"/>
    <menuitem name="Server to list" id="hospital" parent="hospital_menu_2"
              action="hospital.action_server"/>
    <menuitem name="popup" id="wizard_demo_menu_1_form" parent="hospital_menu_root"
              action="wizard_demo_action_window"/>


  </data>
</odoo>