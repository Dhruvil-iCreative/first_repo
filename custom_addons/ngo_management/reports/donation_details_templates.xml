<odoo>
    <template id="donation_receipt_main_template">
        <t t-foreach="docs" t-as="o">
            <center>
                <h1>Donation Receipt</h1>
            </center>
            <br/>
            <br/>
            <div class="page">
                Name :
                <span t-field="o.name"/>
                <br/>
                Orphans Home :
                <span t-field="o.organization_id"/>
                <br/>
                Amount :
                <span t-field="o.amount"/>
                <br/>
                <br/>
                <center>
                    <h2>Thank You for Donating</h2>
                </center>
            </div>
        </t>
    </template>


    <template id="ngo_management.donation_receipt_sub_template">
        <t t-call="web.html_container">
            <t t-cal="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ngo_management.donation_receipt_main_template"/>
                </t>
            </t>
        </t>
    </template>
</odoo>