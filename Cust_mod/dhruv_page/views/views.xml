<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="dhruv_page.list">
      <field name="name">Dhruv_page list</field>
      <field name="model">dhruv_page.dhruv_page</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="city"/>
          <field name="value2"/>


        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="dhruv_page.action_window">
      <field name="name">Dhruv_page window</field>
      <field name="res_model">dhruv_page.dhruv_page</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="dhruv_page.action_server">
      <field name="name">Dhruv_page server</field>
      <field name="model_id" ref="model_dhruv_page_dhruv_page"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Dhruv_page" id="dhruv_page.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="dhruv_page.menu_1" parent="dhruv_page.menu_root"/>
    <menuitem name="Menu 2" id="dhruv_page.menu_2" parent="dhruv_page.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="dhruv_page.menu_1_list" parent="dhruv_page.menu_1"
              action="dhruv_page.action_window"/>
    <menuitem name="Server to list" id="dhruv_page" parent="dhruv_page.menu_2"
              action="dhruv_page.action_server"/>

  </data>
</odoo>