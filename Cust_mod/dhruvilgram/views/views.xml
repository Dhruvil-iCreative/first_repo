<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="view_dhruvil_form" model="ir.ui.view">
        <field name="name">dhruvil.form</field>
        <field name="model">dhruvilgram.dhruvilgram</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group>
                    <field name="name" placeholder="Enter name" required="True"/>
                    <field name="age"/>
                    <field name="your_age"/>
                  </group>
                  <group>
                    <field name="email" widget="email"/>
                    <field name="mobile" widget="phone"/>
                  </group>
                  <group>
                    <field name="city"/>
                    <field name="gender" widget="radio"/>
                    <field name="image" widget="image"/>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="dhruvilgram_list">
      <field name="name">Dhruvilgram list</field>
      <field name="model">dhruvilgram.dhruvilgram</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="your_age"/>
          <field name="city"/>
          <field name="email" widget="email"/>
          <field name="gender" widget="radio"/>
          <field name="mobile" widget="phone"/>
          <field name="image" widget="image"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="dhruvilgram.action_window">
      <field name="name">Dhruvilgram window</field>
      <field name="res_model">dhruvilgram.dhruvilgram</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="dhruvilgram.action_server">
      <field name="name">Dhruvilgram server</field>
      <field name="model_id" ref="model_dhruvilgram_dhruvilgram"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Dhruvilgram" id="dhruvilgram.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="dhruvilgram.menu_1" parent="dhruvilgram.menu_root"/>
    <menuitem name="Menu 2" id="dhruvilgram.menu_2" parent="dhruvilgram.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="dhruvilgram.menu_1_list" parent="dhruvilgram.menu_1"
              action="dhruvilgram.action_window"/>
    <menuitem name="Server to list" id="dhruvilgram" parent="dhruvilgram.menu_2"
              action="dhruvilgram.action_server"/>

  </data>
</odoo>