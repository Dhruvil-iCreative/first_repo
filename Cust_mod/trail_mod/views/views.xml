<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="trail_mod.list">
      <field name="name">Trail_mod list</field>
      <field name="model">trail_mod.trail_mod</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="trail_mod.action_window">
      <field name="name">Trail_mod window</field>
      <field name="res_model">trail_mod.trail_mod</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="trail_mod.action_server">
      <field name="name">Trail_mod server</field>
      <field name="model_id" ref="model_trail_mod_trail_mod"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Trail_mod" id="trail_mod.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="trail_mod.menu_1" parent="trail_mod.menu_root"/>
    <menuitem name="Menu 2" id="trail_mod.menu_2" parent="trail_mod.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="trail_mod.menu_1_list" parent="trail_mod.menu_1"
              action="trail_mod.action_window"/>
    <menuitem name="Server to list" id="trail_mod" parent="trail_mod.menu_2"
              action="trail_mod.action_server"/>

  </data>
</odoo>