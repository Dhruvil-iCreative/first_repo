<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="trail_3.list">
      <field name="name">trail_3 list</field>
      <field name="model">trail_3.trail_3</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="city"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="trail_3.action_window">
      <field name="name">trail_3 window</field>
      <field name="res_model">trail_3.trail_3</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="trail_3.action_server">
      <field name="name">trail_3 server</field>
      <field name="model_id" ref="model_trail_3_trail_3"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="trail_3" id="trail_3.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="trail_3.menu_1" parent="trail_3.menu_root"/>
    <menuitem name="Menu 2" id="trail_3.menu_2" parent="trail_3.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="trail_3.menu_1_list" parent="trail_3.menu_1"
              action="trail_3.action_window"/>
    <menuitem name="Server to list" id="trail_3" parent="trail_3.menu_2"
              action="trail_3.action_server"/>

  </data>
</odoo>